{% set th = config.themes['keepreading-ii'] %}
{# alle Top-Level-Seiten, die im Footer erscheinen sollen #}
{# Top-Level sammeln, nav_footer tolerant prüfen #}
{% set items = [] %}
{% for p in pages.children %}
  {% set flag = p.header.nav_footer %}
  {% if flag is same as(true) or flag == 1 or flag == '1' or flag == 'true' %}
    {% set items = items|merge([p]) %}
  {% endif %}
{% endfor %}
        <footer class="bg-neutral-200 dark:bg-neutral-950 text-zinc-500 text-gray-800 dark:text-gray-300 w-full pb-2 border-t border-neutral-500 px-2">
            {% if th.footer.enabled %}
            <div class="mx-auto max-w-3xl py-5 grid grid-cols-1 md:grid-cols-4 gap-6">
                <!-- 2/4: Über diesen Blog -->
                <section class="md:col-span-2">
                <h2>{{ th.footer_headline|default(page.title) }}</h2>
                <p>{{ th.footer_description }}</p>
                </section>

                <!-- 1/4: Navigation -->
                {% if th.linklist.enabled %}
                <section class="md:col-span-1">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-zinc-600 dark:text-zinc-400">{{ th.linklist.title }}</h3>
                <ul class="mt-3 flex flex-col gap-2">
                {% set count = 0 %}
                {% for p in pages.children %}
                    {% set flag = p.header.nav_footer %}
                    {% if flag is same as(true) or flag == 1 or flag == '1' or flag == 'true' %}
                    {% set count = count + 1 %}
                    <li>
                        <a href="{{ p.url }}" class="hover:text-zinc-900 dark:hover:text-zinc-100">
                        {{ p.menu|default(p.title)|e }}
                        </a>
                    </li>
                    {% endif %}
                {% endfor %}

                {% if count == 0 %}
                    <li class="text-sm text-zinc-500">No footer links defined</li>
                {% endif %}
                </ul>
                </section>  
                {% endif %}              

                <!-- 1/4: Social Media -->
                {% if th.social.enabled %}
                <section class="md:col-span-1">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-zinc-600 dark:text-zinc-400">{{ th.social.title }}</h3>
                {% if th.social.icons %}
                    {# --- ICON MODE (horizontal) --- #}
                    <ul class="mt-3 flex flex-row gap-4 items-center text-xl">

                        {% if th.social.github %}
                        <li>
                            <a href="https://github.com/{{ th.social.github }}" target="_blank" rel="noopener"
                            class="hover:text-zinc-900 dark:hover:text-zinc-100">
                                <!-- GitHub Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="6" height="6" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                                </svg>
                            </a>
                        </li>
                        {% endif %}

                        {% if th.social.instagram %}
                        <li>
                            <a href="https://instagram.com/{{ th.social.instagram }}" target="_blank" rel="noopener"
                            class="hover:text-zinc-900 dark:hover:text-zinc-100">
                                <!-- Instagram Icon -->
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M7 2C4.24 2 2 4.24 2 7v10c0 2.76 2.24 5 5 5h10c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm10 2c1.66 0 3 1.34 3 3v10c0 1.66-1.34 3-3 3H7c-1.66 0-3-1.34-3-3V7c0-1.66 1.34-3 3-3h10zm-5 3a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm4.5-2a1.5 1.5 0 110 3 1.5 1.5 0 010-3z"/>
                                </svg>
                            </a>
                        </li>
                        {% endif %}

                        {% if th.social.twitter %}
                        <li>
                            <a href="https://x.com/{{ th.social.twitter }}" target="_blank" rel="noopener"
                            class="hover:text-zinc-900 dark:hover:text-zinc-100">
                                <!-- X Icon -->
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M18.9 2H22l-7.9 9.1L23.3 22h-7.1l-5.6-7.3L4 22H1l8.5-9.8L.7 2H7.9l5 6.6L18.9 2z"/>
                                </svg>
                            </a>
                        </li>
                        {% endif %}

                        {% if th.social.youtube %}
                        <li>
                            <a href="https://youtube.com/{{ th.social.youtube }}" target="_blank" rel="noopener"
                            class="hover:text-zinc-900 dark:hover:text-zinc-100">
                                <!-- YouTube Icon -->
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M23.5 6.2s-.2-1.7-.8-2.4c-.8-.9-1.6-.9-2-1C17.3 2.5 12 2.5 12 2.5h0s-5.3 0-8.7.3c-.4.1-1.2.1-2 1C.7 4.5.5 6.2.5 6.2S0 8.1 0 10v2c0 1.9.5 3.8.5 3.8s.2 1.7.8 2.4c.8.9 1.8.9 2.3 1 1.7.2 7.2.3 7.2.3s5.3 0 8.7-.3c.4-.1 1.2-.1 2-1 .6-.7.8-2.4.8-2.4s.5-1.9.5-3.8v-2c0-1.9-.5-3.8-.5-3.8zM9.8 14.7V8.3l6.2 3.2-6.2 3.2z"/>
                                </svg>
                            </a>
                        </li>
                        {% endif %}

                        {% if th.social.linkedin %}
                        <li>
                            <a href="https://linkedin.com/in/{{ th.social.linkedin }}" target="_blank" rel="noopener"
                            class="hover:text-zinc-900 dark:hover:text-zinc-100">
                                <!-- LinkedIn Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                                    <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"/>
                                </svg>
                            </a>
                        </li>
                        {% endif %}

                        {% if config.plugins.feed and config.plugins.feed.enabled %}
                        <li>
                            <a href="{{ th.feed_url }}.rss" class="hover:text-zinc-900 dark:hover:text-zinc-100">
                                <!-- RSS Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="6" height="6" fill="currentColor" class="bi bi-rss" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                <path d="M5.5 12a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m-3-8.5a1 1 0 0 1 1-1c5.523 0 10 4.477 10 10a1 1 0 1 1-2 0 8 8 0 0 0-8-8 1 1 0 0 1-1-1m0 4a1 1 0 0 1 1-1 6 6 0 0 1 6 6 1 1 0 1 1-2 0 4 4 0 0 0-4-4 1 1 0 0 1-1-1"/>
                                </svg>
                            </a>
                        </li>
                        {% endif %}

                    </ul>

                {% else %}
                <ul class="mt-3 flex flex-col gap-2">
                    {% if th.social.github %}
                    <li><a href="https://github.com/{{ th.social.github }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">GitHub</a></li>
                    {% endif %}
                    {% if th.social.instagram %}
                    <li><a href="https://instagram.com/{{ th.socialinstagram }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">Instagram</a></li>
                    {% endif %}
                    {% if th.social.twitter %}
                    <li><a href="https://x.com/{{ th.social.twitter }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">X (Twitter)</a></li>
                    {% endif %}
                    {% if th.social.youtube %}
                    <li><a href="https://youtube.com/{{ th.social.youtube }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">YouTube</a></li>
                    {% endif %}
                    {% if th.social.linkedin %}
                    <li><a href="https://linkedin.com/in/{{ th.social.linkedin}}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">YouTube</a></li>
                    {% endif %}
                    {# RSS-Link nur anzeigen, wenn das Feed-Plugin aktiv ist #}
                    {% if config.plugins.feed and config.plugins.feed.enabled %}
                    <li><a href="{{ th.feed_url }}.rss" class="hover:text-zinc-900 dark:hover:text-zinc-100">RSS Feed</a></li>
                    {% endif %}
                </ul>
                {% endif %}
                </section>
                {% endif %}
            </div>
            {% endif %}  
            <div class="mx-auto max-w-3xl {% if th.footer.enabled %}border-t border-neutral-500{% endif %}  py-5">
                &copy; 2025 {{ site.title|e('html') }} - Published with GRAV
            </div>            
        </footer>