{% set th = config.themes['keepreading-ii'] %}
{# alle Top-Level-Seiten, die im Footer erscheinen sollen #}
{# Top-Level sammeln, nav_footer tolerant prüfen #}
{% set items = [] %}
{% for p in pages.children %}
  {% set flag = p.header.nav_footer %}
  {% if flag is same as(true) or flag == 1 or flag == '1' or flag == 'true' %}
    {% set items = items|merge([p]) %}
  {% endif %}
{% endfor %}
        <footer class="bg-neutral-200 dark:bg-neutral-950 text-zinc-500 text-gray-800 dark:text-gray-300 w-full pb-2 border-t border-neutral-500 px-2">
            <div class="mx-auto max-w-3xl py-5 grid grid-cols-1 md:grid-cols-4 gap-6">
                <!-- 2/4: Über diesen Blog -->
                <section class="md:col-span-2">
                <h2>{{ th.footer_headline|default(page.title) }}</h2>
                <p>{{ th.footer_description }}</p>
                </section>

                <!-- 1/4: Navigation -->
                <section class="md:col-span-1">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-zinc-600 dark:text-zinc-400">Some Links</h3>
                <ul class="mt-3 flex flex-col gap-2">
                {% set count = 0 %}
                {% for p in pages.children %}
                    {% set flag = p.header.nav_footer %}
                    {% if flag is same as(true) or flag == 1 or flag == '1' or flag == 'true' %}
                    {% set count = count + 1 %}
                    <li>
                        <a href="{{ p.url }}" class="hover:text-zinc-900 dark:hover:text-zinc-100">
                        {{ p.menu|default(p.title)|e }}
                        </a>
                    </li>
                    {% endif %}
                {% endfor %}

                {% if count == 0 %}
                    <li class="text-sm text-zinc-500">Keine Footer-Links definiert</li>
                {% endif %}
                </ul>
                </section>                

                <!-- 1/4: Social Media -->
                <section class="md:col-span-1">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-zinc-600 dark:text-zinc-400">Social Media</h3>
                <ul class="mt-3 flex flex-col gap-2">
                    {% if th.github.social %}
                    <li><a href="https://github.com/{{ th.github.social }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">GitHub</a></li>
                    {% endif %}
                    {% if th.instagram.social %}
                    <li><a href="https://instagram.com/{{ th.instagram.social }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">Instagram</a></li>
                    {% endif %}
                    {% if th.twitter.social %}
                    <li><a href="https://x.com/{{ th.twitter.social }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">X (Twitter)</a></li>
                    {% endif %}
                    {% if th.youtube.social %}
                    <li><a href="https://youtube.com/{{ th.youtube.social }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">YouTube</a></li>
                    {% endif %}
                    {% if th.linkedin.social %}
                    <li><a href="https://linkedin.com/in/{{ th.linkedin.social }}" target="_blank" rel="noopener" class="hover:text-zinc-900 dark:hover:text-zinc-100">YouTube</a></li>
                    {% endif %}
                    {# RSS-Link nur anzeigen, wenn das Feed-Plugin aktiv ist #}
                    {% if config.plugins.feed and config.plugins.feed.enabled %}
                    <li><a href="{{ th.feed_url }}.rss" class="hover:text-zinc-900 dark:hover:text-zinc-100">RSS Feed</a></li>
                    {% endif %}
                </ul>
                </section>
            </div>    
            <div class="mx-auto max-w-3xl border-t border-neutral-500 py-5">
                &copy; 2025 {{ site.title|e('html') }} - Published with GRAV
            </div>            
        </footer>