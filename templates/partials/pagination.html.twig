{# partials/pagination-tailwind.html.twig
   expects: pagination = collection.params.pagination #}

{% set p = pagination %}
{% if p and p.count > 1 %}
  {% set total = p.count %}

  {# Hilfsfunktion: anzeigen, falls in Fenster oder Rand (1/letzte) #}
  {% macro in_window(n, cur, total) %}
    {{ (n == 1) or (n == total) or (n >= cur - 3 and n <= cur + 3) }}
  {% endmacro %}
  {% import _self as H %}
  {% set p = collection.params.pagination %}

  <nav class="flex items-center justify-between border-t border-gray-200 px-4 sm:px-0 dark:border-neutral-500 my-3" aria-label="Pagination">
    {# Prev #}
    <div class="-mt-px flex w-0 flex-1">
      {% if p.hasPrev %}
        <a href="{{page.url}}{{ p.prevUrl }}"
           class="inline-flex items-center border-t-2 border-transparent pt-4 pr-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:border-white/20 dark:hover:text-gray-200"
           rel="prev">
          <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="mr-3 size-5 text-gray-400 dark:text-gray-500">
            <path d="M18 10a.75.75 0 0 1-.75.75H4.66l2.1 1.95a.75.75 0 1 1-1.02 1.1l-3.5-3.25a.75.75 0 0 1 0-1.1l3.5-3.25a.75.75 0 1 1 1.02 1.1l-2.1 1.95h12.59A.75.75 0 0 1 18 10Z" clip-rule="evenodd" fill-rule="evenodd" />
          </svg>
          prev
        </a>
      {% endif %}
    </div>

    {# Page numbers #}
      {# Zahlen #}
    <div class="-mt-px flex items-center">
      {% set cur  = uri.param('page')|default('1') %}
      {% set total = p.count %}
      {% set lastPrinted = 0 %}
      {% for i in 1..total %}
      {% set currentPage = uri.param('page')|default('1') %}
        {# Fenster: 1, letzte, und ±3 um die aktuelle Seite #}
        {% if i == 1 or i == total or (i >= cur - 3 and i <= cur + 3) %}
          {% if lastPrinted and i > lastPrinted + 1 %}
            <span class="inline-flex items-center px-2 pt-4 text-sm text-gray-400">…</span>
          {% endif %}
          {% if currentPage is same as('' ~ i ~ '') %}
            <span aria-current="page" class="inline-flex items-center border-t-2 border-sky-500 px-4 pt-4 text-sm font-medium text-sky-600 dark:border-sky-400 dark:text-sky-400">{{ i }}</span>
          {% else %}
            <a href="{{ page.url ~ '/page' ~ system.param_sep ~ i }}"
               class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:text-white/80">
              {{ i }}
            </a>
          {% endif %}
          {% set lastPrinted = i %}
        {% endif %}
      {% endfor %}
    </div>

    {# Next #}
    <div class="-mt-px flex w-0 flex-1 justify-end">
      {% if p.hasNext %}
        <a href="{{ page.url }}{{ p.nextUrl }}"
           class="inline-flex items-center border-t-2 border-transparent pt-4 pl-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:border-white/20 dark:hover:text-gray-200"
           rel="next">
          next
          <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="ml-3 size-5 text-gray-400 dark:text-gray-500">
            <path d="M2 10a.75.75 0 0 1 .75-.75h12.59l-2.1-1.95a.75.75 0 1 1 1.02-1.1l3.5 3.25a.75.75 0 0 1 0 1.1l-3.5 3.25a.75.75 0 1 1-1.02-1.1l2.1-1.95H2.75A.75.75 0 0 1 2 10Z" clip-rule="evenodd" fill-rule="evenodd" />
          </svg>
        </a>
      {% endif %}
    </div>
  </nav>
{% endif %}
